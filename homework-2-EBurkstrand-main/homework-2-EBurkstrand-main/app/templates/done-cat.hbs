{{page-title "DoneCat"}}
{{outlet}}

<div class="pageBox">

  <header class="subHeader">FINISHED TODO ITEMS ({{this.cat}})</header>

  <div class="container">
    <ul class="flexBox">
      {{#each this.todos as |item|}}
        <div class="todoItem2">
          <LinkTo @route="todo" @model="{{item.id}}">
              <li class="todoItem">{{truncate item.todo}}</li>
          </LinkTo>
          <button type="button"{{on 'click' (fn this.toggleDone item)}}>Mark as not Done</button>
        </div>
      {{/each}}
    </ul>
  </div>

  <div class="center">
    <button type="button" {{on 'click' this.toTodos}}>Back to Todos</button><br>
  </div>
</div>